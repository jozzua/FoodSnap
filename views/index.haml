-# index.haml
%body(lang="en")
  .container
    #header
      .row
        .three.columns
          %h1 FoodSnap.in
        .nine.columns
          %p Alpha
      .row
        .twelve.columns
          %h3 Share food.  Share Value.
          %p To learn more, follow the updates on twitter:
          %a.twitter-follow-button{"data-show-count" => "false", :href => "https://twitter.com/FoodSnapper"} Follow @FoodSnapper
          :javascript
              !function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");

    .container
      #main
        .row
          .four.columns
            %p
            %img{:alt => "Find Food!", :src => "images/foodsnap1.png"}/

          .four.columns
            %p
            %img{:alt => "Snap a Pic !", :src => "images/foodsnap2.png"}/

          .four.columns
            %p
            %img{:alt => "Send To Friends !", :src => "images/foodsnap3.png"}/
        .row
          %h4 Coming Soon!
        
    #footer
      .row
        %hr
        %a.twitter-follow-button{"data-show-count" => "false", :href => "https://twitter.com/FoodSnapper"} Follow @FoodSnapper
